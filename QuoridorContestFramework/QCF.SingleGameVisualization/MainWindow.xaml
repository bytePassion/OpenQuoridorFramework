                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Ellipse Grid.RowSpan="2"
                         Grid.Column="0"
                         Width="60"
                         Height="60"
                         Fill="{Binding IsGameRunning,
                                        Converter={StaticResource TopPlayerMarkerColor}}"
                         Stroke="Black"
                         StrokeThickness="2" />

                <TextBlock Grid.Row="0"
                           Grid.Column="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="BotName" />

                <TextBlock Grid.Row="0"
                           Grid.Column="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="WallsLeft" />

                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="{Binding TopPlayerName}" />

                <TextBlock Grid.Row="1"
                           Grid.Column="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="{Binding TopPlayerWallCountLeft}" />

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="DLL-path:" />

                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Margin="7"
                         VerticalContentAlignment="Center"
                         Text="{Binding DllPathInput,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}" />
                <Button Grid.Row="2"
                        Grid.Column="2"
                        Margin="7"
                        Command="{Binding BrowseDll}"
                        Content="BrowseDll" />

            </Grid>



        </Border>

